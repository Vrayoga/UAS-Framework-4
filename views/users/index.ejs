    <img src="images/nav_login.png" alt="Gambar Atas" class="nav-image">
    <button class="login-button">
        <%= email %>
    </button>
    <button class="icon-button" style="margin-right: 90px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
            class="bi bi-person-fill login-icon" viewBox="0 0 16 16">
