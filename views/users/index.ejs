    <%- include('../partials/__navbar.ejs') %>

    <!-- Photo Section -->
    <img src="images/gambar_samping1.png" alt="Photo 1" class="photo left">
    <section class="photo-section">
        <img src="images/sponsor1.png" alt="Photo 2" class="photo center" id="center-photo">
    </section>
    <img src="images/gambar_samping2.png" alt="Photo 3" class="photo right">

    <!-- Rekomendasi Section -->
    <section class="rekomendasi-section">
